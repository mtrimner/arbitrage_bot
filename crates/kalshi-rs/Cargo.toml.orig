[package]
name = "kalshi-rs"
version = "0.2.1"
edition = "2021"

license = "MIT"
description = "Rust SDK for the Kalshi prediction market API. Mirrors the official Python SDK design for ease of use."
readme = "README.md"
repository = "https://github.com/arnavchahal/kalshi-rs"
documentation = "https://docs.rs/kalshi-rs"
keywords = ["kalshi", "sdk", "api", "trading", "prediction-markets"]
categories = ["api-bindings", "finance"]

exclude = [
    ".github/*",
    "examples/*",
]

[dependencies]
reqwest = { version = "0.12", features = ["json"] }
tokio = { version = "1", features = ["full"] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
derive_more = { version = "2.0.1", features = ["full"] }
rsa = "0.9"
sha2 = "0.10"
base64 = "0.22"
rand = "0.8"
sha = "1.0"
url = "2.5"
chrono = "0.4"
serde_urlencoded = "0.7"
prettyplease = "0.2"
syn = { version = "2", features = ["full", "parsing"] }
walkdir = "2"
tokio-tungstenite = {version = "0.27.0", features = ["native-tls"]}
futures-util = "0.3.31"


